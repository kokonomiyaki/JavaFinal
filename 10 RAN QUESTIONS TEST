import java.io.File;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;

public class Test{
    public ArrayList<String> quesbank = new ArrayList<String>();
    public ArrayList<String> wordlist = new ArrayList<String>();
    public ArrayList<String> categories = new ArrayList<String>();
    public static void main(String[] args) throws IOException{
        Test finalAss = new Test();
        finalAss.LoadQues();
        finalAss.QuesList();


    }

    private void LoadQues()throws IOException{
        try{
            File dictionaryFile = new File("Quesbank1.txt");
            Scanner inputFile = new Scanner(dictionaryFile);
            while (inputFile.hasNext()) {
                String str = inputFile.nextLine();
                if (str.length() > 0) {
                    quesbank.add(str);
                }
            }
        }catch (IOException a){
            a.printStackTrace();
            System.out.println("File directory doesn't exist");
        }finally {
            System.out.println("Dictionary file is loaded sucessfully.");
        }
    }

    public void QuesList() throws IOException{
        //creating wordlist that contains 100 word in wordlist.txt
        Random rand = new Random();
        String question;
   
        try{
            PrintWriter printWriter = new PrintWriter("QuestionsList.txt", "UTF-8");
            for(int i = 0; i < 11; i++){
                int randomIndex = rand.nextInt(quesbank.size());
                String RanQues = quesbank.get(randomIndex);//get random number
                //quesbank.remove(randomIndex); //prevent duplicating
                
                if(RanQues.contains("::")){
                    question= RanQues.substring(0, RanQues.indexOf("::")); 
                    printWriter.println((i+1)+ "."+ question);
                    printWriter.println("Answer: ");
                    printWriter.println(" ");
                    wordlist.add(question); //creat an Arraylist for wordlist
                }   
            }
            printWriter.close();
        }
        catch(IOException b){
            b.printStackTrace();
            System.out.println("File doesn't exist"); 
        }
        finally{
            System.out.println("WordList has been created.");           
        }
    }
}

